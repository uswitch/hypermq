{
  "family": "hypermq",
  "containerDefinitions": [
    {
      "name": "hypermq",
      "image": "registry.usw.co/hypermq:{{ printf "%.8s" .Env.DRONE_COMMIT }}",
      "cpu": 250,
      "memory": 1000,
      "essential": true,
      "portMappings": [
        { "containerPort": 8080 }
      ],
      "environment": [
        { "name": "JAVA_OPTS", "value": "-Xms900m -Xmx900m -server" },
        { "name": "PORT", "value": "8080" },
        { "name": "APP_ENV", "value": "production" }
      ]
    }
  ]
}
